<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>
<p>
  <strong>订单内容</strong>
  <% @order.line_items.each do |item| %>
    <%= item.product.title %>
  <% end %>
</p>
<p>
  <strong>订单数量</strong>
  <% @order.line_items.each do |item| %>
    <%= item.quantity %>
  <% end %>
</p>
<%= link_to 'Back', orders_path %>
